<h3 class='col-10 offset-5'><%= @game.name %></h3>
<div class='col-10 offset-3'>
    <div class="chessboard">
        <% 0.upto(7) do |y| %>
            <% 7.downto(0) do |x| %>
                <% if (y+x).even? %>
                    <div class="black"></div>
                <% else %>
                    <div class="white"></div>
                <% end %>
            <% end %>
        <% end %>         
    </div>
</div>




